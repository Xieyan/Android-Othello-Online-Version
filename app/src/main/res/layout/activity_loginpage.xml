<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout_head">
        <!--  CsAccountName Label -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="Your account Name:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/txtView_accountName" />

        <EditText android:id="@+id/txt_accountName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_white" />
        <!--  NewStudentName Label -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout_head"
        android:layout_marginTop="200dp">

        <Button
            android:id="@+id/btn_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Records"
            />
        <Button
            android:id="@+id/btn_startMatching"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Matching"
            />

    </LinearLayout>


</RelativeLayout>